<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
	<default>
		<lofhelpdesk>
			<general_settings>
				<enable>1</enable>
			</general_settings>
			<email_settings>
				<enable_testmode>1</enable_testmode>
				<sender_email_identity>general</sender_email_identity>
				<new_ticket_template>lofhelpdesk_email_settings_new_message_template</new_ticket_template>
				<new_message_template>lofhelpdesk_email_settings_new_message_template</new_message_template>
				<status_ticket_template>lofhelpdesk_email_settings_status_ticket_template</status_ticket_template>
				<reminder_template>lofhelpdesk_email_settings_reminder_template</reminder_template>
				<assign_ticket_template>lofhelpdesk_email_settings_assign_ticket_template</assign_ticket_template>
				<enable_email_customer_chat>0</enable_email_customer_chat>
				<email_admin_chat>0</email_admin_chat>
				<customer_chat_template>lofhelpdesk_email_settings_customer_chat_template</customer_chat_template>
				<admin_reply_template>lofhelpdesk_email_settings_admin_reply_template</admin_reply_template>
			</email_settings>
			<automation>
				<auto_close_ticket>7</auto_close_ticket>
				<auto_reminder_ticket>3</auto_reminder_ticket>
				<enable_clean_log>0</enable_clean_log>
				<clean_older_day>30</clean_older_day>
				<enable_auto_assign_user>0</enable_auto_assign_user>
				<admin_user_id/>
			</automation>
			<chat>
				<enable>1</enable>
				<text_label>Chat With Us</text_label>
				<background_color>#293239</background_color>
				<enable_blacklist>1</enable_blacklist>
				<welcome_message>Welcome to our site, if you need help simply reply to this message, we are online and ready to help.</welcome_message>
				<auto_message>Thanks you for contacting with us!</auto_message>
				<auto_user_name>Bot</auto_user_name>
			</chat>
			<advanced_settings>
				<enable_qty_request>0</enable_qty_request>
			</advanced_settings>
		</lofhelpdesk>
	</default>
</config>	